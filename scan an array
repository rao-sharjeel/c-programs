#include<stdio.h>
void scan_array(int array[],int *size)
{
    int i;
    printf("enter no. of elements in array : ");
    scanf("%d", size);
    printf("enter data into array : \n");
    for(i = 0; i < *size; i++)
    {
        printf("enter value no. %d ", i + 1);
        scanf("%d", &array[i]);
    }
}
int main()
{
  int array[100], size;
  scan_array(array, &size);
}
